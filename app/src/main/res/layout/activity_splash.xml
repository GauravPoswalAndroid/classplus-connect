<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".login.ui.SplashActivity">


    <ImageView
        android:id="@+id/splashAnim"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/splashLogo"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:src="@drawable/ic_connect_banner_v3"
        app:layout_constraintBottom_toBottomOf="@id/splashAnim"
        app:layout_constraintEnd_toEndOf="@id/splashAnim"
        app:layout_constraintStart_toStartOf="@id/splashAnim"
        app:layout_constraintTop_toTopOf="@id/splashAnim"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>